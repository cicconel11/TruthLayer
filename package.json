{
    "name": "truthlayer-mvp",
    "version": "1.0.0",
    "description": "Infrastructure system for search and AI transparency",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsx watch src/index.ts",
        "start": "node dist/index.js",
        "test": "vitest --run",
        "test:watch": "vitest",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "typecheck": "tsc --noEmit",
        "migrate": "tsx src/database/migrate.ts",
        "seed": "tsx src/database/seed.ts"
    },
    "keywords": [
        "search-transparency",
        "algorithmic-bias",
        "data-collection",
        "web-scraping",
        "llm-annotation"
    ],
    "author": "TruthLayer Team",
    "license": "MIT",
    "dependencies": {
        "puppeteer": "^21.5.2",
        "pg": "^8.11.3",
        "openai": "^4.20.1",
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "dotenv": "^16.3.1",
        "winston": "^3.11.0",
        "node-cron": "^3.0.3",
        "axios": "^1.6.2",
        "cheerio": "^1.0.0-rc.12",
        "uuid": "^9.0.1",
        "zod": "^3.22.4",
        "date-fns": "^2.30.0"
    },
    "devDependencies": {
        "@types/node": "^20.9.0",
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/pg": "^8.10.7",
        "@types/uuid": "^9.0.7",
        "@types/cheerio": "^0.22.35",
        "@types/node-cron": "^3.0.11",
        "typescript": "^5.2.2",
        "tsx": "^4.6.0",
        "vitest": "^0.34.6",
        "eslint": "^8.54.0",
        "@typescript-eslint/eslint-plugin": "^6.12.0",
        "@typescript-eslint/parser": "^6.12.0",
        "prettier": "^3.1.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}