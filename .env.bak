# API Providers
# OPENAI_API_KEY=""
# ANTHROPIC_API_KEY=""

# Network and Storage
# PROXY_URL=""
STORAGE_URL=postgres://postgres:postgres@localhost:5432/truthlayer

# Collector
BENCHMARK_QUERY_SET_PATH="config/benchmark-queries.json"
COLLECTOR_OUTPUT_DIR="data/serp"
COLLECTOR_MAX_RESULTS="20"
COLLECTOR_USER_AGENT="TruthLayerBot/0.1 (https://truthlayer.ai/contact)"
COLLECTOR_RESPECT_ROBOTS="true"
COLLECTOR_ROBOTS_CACHE_TTL_MS="3600000"

# Annotation
ANNOTATION_CACHE_DIR="data/cache/annotation"
ANNOTATION_MODEL="gpt-4o-mini"
ANNOTATION_PROMPT_VERSION="v1"
ANNOTATION_PROVIDER="openai"
ANNOTATION_CLAUDE_PYTHON="python3"
ANNOTATION_CLAUDE_SCRIPT="apps/annotation/python/claude_bridge.py"
ANNOTATION_CONFIDENCE_DEFAULT="0.7"
ANNOTATION_BATCH_SIZE="10"
ANNOTATION_MAX_CONCURRENCY="3"
ANNOTATION_POLLING_INTERVAL_MS="5000"
ANNOTATION_AUDIT_SAMPLE_SIZE="5"

# Scheduler
SCHEDULER_CRON_EXPRESSION="0 * * * *"
SCHEDULER_RUN_ON_START="true"
SCHEDULER_MAX_RETRIES="3"
SCHEDULER_RETRY_DELAY_MS="10000"
SCHEDULER_TIMEZONE="UTC"

# Metrics
METRICS_EXPORT_DIR="data/metrics"
METRICS_WINDOW_SIZE="7"

# Logging
LOG_LEVEL="info"
